{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Skill Manifest",
  "type": "object",
  "required": [
    "name",
    "title",
    "version",
    "description",
    "triggers",
    "toolsAllowed",
    "minAgentVersion",
    "instructionFile"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "triggers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "toolsAllowed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "minAgentVersion": {
      "type": "string"
    },
    "instructionFile": {
      "type": "string",
      "pattern": "^.+\\.md$"
    },
    "owner": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
